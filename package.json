{
  "name": "chic-ui",
  "version": "0.1.3",
  "description": "Reusable and customisable React Components to help you code faster.",
  "license": "ISC",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/karishmashuklaa/chic-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/karishmashuklaa/chic-ui.git"
  },
  "bugs": {
    "url": "https://github.com/karishmashuklaa/chic-ui/issues",
    "email": "carishmashukla28@gmail.com"
  },
  "keywords": [
    "react",
    "react-ui",
    "library",
    "react-library",
    "chic"
  ],
  "author": "Karishma Shukla(https://github.com/karishmashuklaa)",
  "dependencies": {
    "styled-components": "^5.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "tsc --build \"./tsconfig.json\"",
    "build:storybook": "build-storybook -s public",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "prebuild": "npm run compile-icons",
    "prepublish": "npm run build",
    "build-storybook": "build-storybook -s public",
    "compile-icons": "npx @svgr/cli -d src/icons src/icons --typescript",
    "prepublishOnly": "npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.21",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.2",
    "web-vitals": "^1.1.2",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/node-logger": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@svgr/cli": "^5.5.0"
  }
}
